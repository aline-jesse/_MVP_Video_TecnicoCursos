
# üåç Vari√°veis de Ambiente - Produ√ß√£o
# Copie este arquivo para .env.production e configure os valores

# ===========================================
# APLICA√á√ÉO
# ===========================================
NODE_ENV=production
APP_VERSION=1.0.0
PORT=3000
FORCE_HTTPS=true

# ===========================================
# NEXT.JS & AUTENTICA√á√ÉO
# ===========================================
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secure-secret-here
ABACUSAI_API_KEY=your-abacusai-api-key

# ===========================================
# BANCO DE DADOS
# ===========================================
DATABASE_URL=postgresql://username:password@host:port/database
RUN_MIGRATIONS=false

# ===========================================
# REDIS (Cache & Sess√µes)
# ===========================================
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=your-redis-password

# ===========================================
# GOOGLE CLOUD TTS
# ===========================================
GOOGLE_TTS_API_KEY=your-google-tts-api-key
GOOGLE_TTS_PROJECT_ID=your-google-project-id

# ===========================================
# AWS S3
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_FOLDER_PREFIX=estudio-ia/

# ===========================================
# ELEVENLABS
# ===========================================
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ===========================================
# OPENAI
# ===========================================
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# AZURE SPEECH
# ===========================================
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_DIR=/app/logs

# ===========================================
# BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_LOCAL_PATH=/app/backups

# ===========================================
# CONFIGURA√á√ïES GERAIS
# ===========================================
DEFAULT_LANGUAGE=pt-BR
MAX_VIDEO_LENGTH=300
ENABLE_ANALYTICS=true
ENABLE_METRICS=true

# ===========================================
# MONITORAMENTO
# ===========================================
GRAFANA_PASSWORD=your-grafana-password
PROMETHEUS_RETENTION=200h

# ===========================================
# DOCKER & DEPLOY
# ===========================================
POSTGRES_DB=estudio_ia_videos
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
