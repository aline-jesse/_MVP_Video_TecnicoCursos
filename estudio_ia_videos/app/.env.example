
# ============================================
# ESTÚDIO IA DE VÍDEOS - Environment Variables
# ============================================

# App Configuration
NODE_ENV=production
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://treinx.abacusai.app

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/estudio_ia_videos

# ============================================
# Authentication (NextAuth)
# ============================================
NEXTAUTH_URL=https://treinx.abacusai.app
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# ============================================
# Redis Cache
# ============================================
REDIS_URL=redis://user:password@host:6379

# ============================================
# AWS S3 Storage
# ============================================
AWS_BUCKET_NAME=your-bucket-name
AWS_FOLDER_PREFIX=production/
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# ============================================
# TTS Providers
# ============================================

# Azure Speech Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Google Cloud TTS (opcional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ============================================
# Security
# ============================================
CSRF_SECRET=generate-with-openssl-rand-base64-32

# ============================================
# Monitoring (Opcional mas Recomendado)
# ============================================

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-organization
SENTRY_PROJECT=estudio-ia-videos

# ============================================
# CDN (Opcional)
# ============================================
CDN_URL=https://cdn.your-domain.com

# ============================================
# Feature Flags (Opcional)
# ============================================
ENABLE_ANALYTICS=true
ENABLE_COLLABORATION=true
ENABLE_AI_FEATURES=true

# ============================================
# External APIs (Opcional)
# ============================================

# Unsplash (para biblioteca de imagens)
UNSPLASH_ACCESS_KEY=your-unsplash-key

# OpenAI (para features de IA)
OPENAI_API_KEY=your-openai-key

# ============================================
# Development Only
# ============================================
# Remova essas variáveis em produção

# Log level
LOG_LEVEL=debug

# Disable rate limiting in dev
DISABLE_RATE_LIMIT=true

# Skip email verification
SKIP_EMAIL_VERIFICATION=true

# ============================================
# Como gerar secrets:
# ============================================
# openssl rand -base64 32
