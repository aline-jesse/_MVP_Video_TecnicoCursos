# Fase 5 - Deploy e Otimiza√ß√£o para Produ√ß√£o

# ===== CONFIGURA√á√ïES B√ÅSICAS =====
NODE_ENV=production
PORT=3001
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="file:./dev.db"
DB_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379
REDIS_MOCK_MODE=true
REDIS_TTL_DEFAULT=3600
REDIS_MAX_MEMORY=512mb

# ===== CACHE CONFIGURATION =====
CACHE_ENABLED=true
CACHE_TTL_DEFAULT=3600
CACHE_TTL_STATIC=86400
CACHE_TTL_DYNAMIC=1800
CACHE_COMPRESSION=true
CACHE_MAX_SIZE=1000
MEMORY_CACHE_SIZE=500

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=development_jwt_secret_key_2025
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# ===== PERFORMANCE OPTIMIZATION =====
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# ===== FEATURE FLAGS =====
FEATURE_AVATAR_3D=true
FEATURE_TTS_PREMIUM=true
FEATURE_COLLABORATION=true
FEATURE_ANALYTICS=true
FEATURE_WHITE_LABEL=false

# ===== DEPLOYMENT =====
DEPLOYMENT_ENV=development
DEPLOYMENT_VERSION=5.0.0