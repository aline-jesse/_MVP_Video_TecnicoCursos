# Opções: development, staging, production

LOG_LEVEL=debug
# Opções: debug, info, warn, error

# Limites de Upload
MAX_FILE_SIZE=50mb
MAX_PPTX_SIZE=100mb
MAX_VIDEO_DURATION=600
# Duração em segundos (600s = 10 minutos)

# Rate Limiting
